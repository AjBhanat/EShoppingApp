<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Child Categories</th>
    <th>Link</th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
      <td>
        <% category.child_links.each do |child_category| %>
          <%= @categories.find_by_id(child_category.category_id).name %>
        <% end %>
      </td>
      <td><%= link_to 'Show', category %></td>
      <!--        <td><%#= link_to 'Edit', edit_category_path(category) %></td>-->
      <!--        <td><%#= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
    </tr>
  <% end %>
  </tbody>
</table>

